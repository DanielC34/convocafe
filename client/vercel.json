{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/react",
      "config": { "distDir": "client/build" }
    }
  ],
  "rewrites":
  [
    {
        "source": "/(.*)",
        "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ]
}
